	escribir "ingrese el valor de base; ";
	leer base;
	
	Escribir "ingrese el valor de altura ";
	leer altura;
	
	area= (base * altura) /2;
	
	Escribir "El �rea del tri�ngulo con base", base, "y altura", altura, "es igual a", area;
	
