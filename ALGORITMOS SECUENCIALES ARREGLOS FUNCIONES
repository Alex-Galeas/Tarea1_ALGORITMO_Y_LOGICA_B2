Funcion Calculadoradedescuentoporvolumendecompra
	// Entrada: Se solicita al usuario que ingrese la cantidad de unidades y el precio unitario de un producto.
	// Proceso: Se calcula el total de la compra con y sin descuento, dependiendo de la cantidad de unidades compradas.
	// Salida: Se muestra en pantalla el total de la compra con y sin descuento.
	
	Definir cantidad, precioUnitario, totalSinDescuento, totalConDescuento Como Real
	
    Escribir "Ingrese la cantidad de unidades del producto que va a comprar:"
    Leer cantidad
	
    Escribir "Ingrese el precio unitario del producto:"
    Leer precioUnitario
	
    totalSinDescuento <- cantidad * precioUnitario
	
    Si cantidad >= 10 Y cantidad <= 50 Entonces
        totalConDescuento <- totalSinDescuento - (totalSinDescuento * 0.05)
        Escribir "Ha calificado para un descuento del 5%."
    Sino
        Si cantidad > 50 Y cantidad <= 100 Entonces
            totalConDescuento <- totalSinDescuento - (totalSinDescuento * 0.10)
            Escribir "Ha calificado para un descuento del 10%."
        Sino
            Si cantidad > 100 Entonces
                totalConDescuento <- totalSinDescuento - (totalSinDescuento * 0.15)
                Escribir "Ha calificado para un descuento del 15%."
            Sino
                totalConDescuento <- totalSinDescuento
                Escribir "No ha calificado para ning�n descuento."
            FinSi
        FinSi
    FinSi
	
    Escribir "El total de la compra sin descuento es: $", totalSinDescuento
    Escribir "El total de la compra con descuento es: $", totalConDescuento
FinFuncion
funcion Calculadoradecostodeservicio
	// Entrada: Se solicita al usuario que ingrese la cantidad de horas de servicio que necesita.
	// Proceso: Se calcula el costo total del servicio. Si se necesitan m�s de 10 horas, se aplica un 20% de descuento.
	// Salida: Se muestra en pantalla el costo total del servicio.
	
	Definir horasServicio, costoTotal Como Real
	
    Escribir "Ingrese la cantidad de horas de servicio que necesita:"
    Leer horasServicio
	
    Si horasServicio > 10 entonces
        costoTotal = horasServicio * 10 * 0.8  // Aplicar un 20% de descuento
    Sino
        costoTotal = horasServicio * 10
    FinSi
	
    Escribir "El costo total del servicio es: ", costoTotal
FinFuncion
funcion  SumaNumerosPares
	// Entrada: No hay entrada expl�cita.
	// Proceso: Sumar n�meros pares del 1 al 50.
	// Salida: Mostrar la suma de n�meros pares. 
	
    Definir suma, numero como Entero
    suma <- 0
    
    Para numero <- 1 Hasta 50 Con Paso 1
        Si numero MOD 2 = 0 Entonces
            suma <- suma + numero
        FinSi
    FinPara
	
    Escribir "La suma de los n�meros pares del 1 al 50 es: ", suma
	
FinFuncion
Funcion TablaDeMultiplicar
	// Entrada: Se solicita al usuario que ingrese un n�mero.
	// Proceso: Calcular la tabla de multiplicar del n�mero ingresado.
	//Salida: verificar si el resultado es el correcto con el valor indicado.
	
    Definir numero, resultado, i como Entero
    Escribir "Ingrese un n�mero para obtener su tabla de multiplicar: "
    Leer numero
	
    Para i <- 1 Hasta 12 Con Paso 1
        resultado <- numero * i
        Escribir numero, " x ", i, " = ", resultado
    FinPara
FinFuncion
Funcion ContadorDeVocales
	// Entrada: Se solicita al usuario que ingrese una palabra.
	// Proceso: Contar las vocales en la palabra.
	// Salida: Mostrar el n�mero de vocales en la palabra.

    Definir palabra Como Caracter
	Definir contador, i Como Entero
    
    Escribir "Ingresa una palabra: "
    Leer palabra
    
    contador <- 0
    i <- 1
    
    Mientras i <= Longitud(palabra) Hacer
        // Obtener el car�cter actual
        caracter <- SubCadena(palabra, i, i)
        
        // Verificar si el car�cter es una vocal en min�scula
        Si caracter = "a" O caracter = "e" O caracter = "i" O caracter = "o" O caracter = "u" Entonces
            contador <- contador + 1
        FinSi
        
        i <- i + 1
    FinMientras
    
    Escribir "El n�mero de vocales en la palabra es: ", contador
	
FinFuncion

Funcion ContadorDeDigitos
	// Entrada: Se solicita al usuario que ingrese una palabra.
	// Proceso: Contar los d�gitos en la palabra.
	// Salida: Mostrar el n�mero de d�gitos en la palabra.
	
    Definir palabra Como Caracter
    Definir i, contador Como Entero
	
    Escribir "Ingresa una palabra: "
    Leer palabra
	
    contador <- 0
	
    Para i <- 1 Hasta Longitud(palabra) Con Paso 1 Hacer
        Si SubCadena(palabra, i, i) >= "0" Y SubCadena(palabra, i, i) <= "9" entonces
            contador <- contador + 1
        FinSi
    FinPara
	
    Escribir "El n�mero de d�gitos en la palabra es: ", contador
FinFuncion

funcion AdivinaElNumero
	// Entrada: El programa genera un n�mero aleatorio.
	// Proceso: Juego para adivinar un n�mero aleatorio.
	//Salida: verificar si el resultado es el crroecto 
	
    Definir numeroAleatorio, numeroUsuario Como Entero
    Definir intentos Como Entero
    Definir adivinado Como Logico
    
    // Generar un n�mero aleatorio entre 1 y 100
    numeroAleatorio <- Aleatorio(1, 100)
    
    intentos <- 0
    adivinado <- Falso
    
    Escribir "Adivina el n�mero entre 1 y 100."
    
    Mientras No adivinado Hacer
        Escribir "Ingresa tu n�mero: "
        Leer numeroUsuario
        
        intentos <- intentos + 1
        
        Si numeroUsuario = numeroAleatorio Entonces
            Escribir "�Felicidades! Adivinaste el n�mero ", numeroAleatorio, " en ", intentos, " intentos."
            adivinado <- Verdadero
        Sino
            Si numeroUsuario < numeroAleatorio Entonces
                Escribir "El n�mero es mayor."
            Sino
                Escribir "El n�mero es menor."
            FinSi
        FinSi
    FinMientras
FinFuncion
funcion ContadorDeAlfabeto
	// Entrada: Se solicita al usuario que ingrese una palabra.
	// Proceso: Contar las letras del alfabeto en la palabra.
	// Salida: Mostrar el n�mero de letras del alfabeto en la palabra.

    Definir palabra Como Caracter
	Definir i, contador Como Entero
    
    Escribir "Ingresa una palabra: "
    Leer palabra
    
    palabra <- Minusculas (palabra)  // Convertir la palabra a min�sculas para simplificar la comparaci�n
    
    contador <- 0
    
    Para i <- 1 Hasta Longitud(palabra) Con Paso 1 Hacer
        // Obtener el car�cter actual
        caracter <- SubCadena(palabra, i, i)
        
        // Verificar si el car�cter es una letra del alfabeto
        Si caracter >= "a" Y caracter <= "z" Entonces
            contador <- contador + 1
        FinSi
    FinPara
    
    Escribir "El n�mero de letras del alfabeto en la palabra es: ", contador
FinFuncion
